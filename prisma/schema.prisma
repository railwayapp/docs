datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Sentiment {
  POSITIVE
  NEGATIVE
}

model Feedback {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  topic     String
  sentiment Sentiment
  message   String?
}

model CommunityThread {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  section   String
  topic     String
  communityThreadSlug String
}